<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AddTaskServlet</servlet-name>
        <servlet-class>ru.job4j.controller.AddTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckTaskServlet</servlet-name>
        <servlet-class>ru.job4j.controller.CheckTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAllTasksServlet</servlet-name>
        <servlet-class>ru.job4j.controller.ShowAllTasksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAllCategoriesServlet</servlet-name>
        <servlet-class>ru.job4j.controller.ShowAllCategoriesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ru.job4j.controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>ru.job4j.controller.LogInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ru.job4j.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTaskServlet</servlet-name>
        <url-pattern>/addTask.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckTaskServlet</servlet-name>
        <url-pattern>/checkTask.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAllTasksServlet</servlet-name>
        <url-pattern>/showAllTasks.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAllCategoriesServlet</servlet-name>
        <url-pattern>/showAllCategories.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/reg.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/log.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
</web-app>